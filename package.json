{
  "name": "expert-selection-system",
  "version": "1.0.0",
  "description": "专家抽取桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win64": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux",
    "build:linux-arm": "electron-builder --linux --armv7l",
    "build:linux-arm64": "electron-builder --linux --arm64",
    "build:linux-x64": "electron-builder --linux --x64",
    "postinstall": "electron-builder install-app-deps",
    "install:legacy": "npm install --legacy-peer-deps",
    "rebuild": "electron-rebuild",
    "rebuild:sqlite3": "npm rebuild sqlite3"
  },
  "keywords": [
    "expert",
    "selection",
    "desktop",
    "electron"
  ],
  "author": "huangchuping <ksoeasyxiaosi@gmail.com> (https://github.com/ksoeasyxiaosi)",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "rebuild": "^0.1.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.expert.selection",
    "productName": "专家抽取系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "scripts/**/*",
      "database/**/*",
      "styles/**/*",
      "assets/**/*",
      "index.html",
      "package.json",
      "!node_modules/**/*",
      "!build/**/*",
      "!.git/**/*",
      "!*.log",
      "!*.md",
      "!test/**/*",
      "!.github/**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "专家抽取系统",
        "Comment": "专家抽取桌面应用",
        "Type": "Application",
        "Categories": "Utility;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "专家抽取系统",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "database",
        "to": "database",
        "filter": [
          "**/*.db",
          "**/*.sql"
        ]
      },
      {
        "from": "node_modules/sqlite3/",
        "to": "node_modules/sqlite3/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/uuid/",
        "to": "node_modules/uuid/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "includeSubNodeModules": false,
    "npmRebuild": false,
    "publish": null
  },
  "__npminstall_done": false
}